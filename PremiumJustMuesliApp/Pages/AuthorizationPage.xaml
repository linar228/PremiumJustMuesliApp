<Page x:Class="PremiumJustMuesliApp.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PremiumJustMuesliApp.Pages"
      xmlns:language="clr-namespace:PremiumJustMuesliApp.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <TextBlock HorizontalAlignment="Center" Grid.Column="1" FontSize="20" Text="Authorization"/>
        <StackPanel HorizontalAlignment="Center" Grid.Row="0" Grid.RowSpan="3" VerticalAlignment="Center" Grid.Column="1">
            <TextBlock Margin="5" HorizontalAlignment="Center" Text="{x:Static language:Lang.login}"/>
            <TextBox Width="200" Margin="5" x:Name="TBLogin"/>
            <TextBlock Margin="5" HorizontalAlignment="Center" Text="{x:Static language:Lang.password}"/>
            <PasswordBox Margin="5" x:Name="PBPassword"/>
            <Button Margin="5" x:Name="BAuthorzationPage" Click="BAuthorzationPage_Click" Content="{x:Static language:Lang.success}"></Button>
        </StackPanel>
    </Grid>
</Page>
